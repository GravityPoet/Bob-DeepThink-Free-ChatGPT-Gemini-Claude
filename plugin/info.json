{
  "identifier": "io.github.gravitypoet.ai-vip-0-token-plan",
  "version": "0.1.4",
  "category": "translate",
  "name": "AI-VIP-0-token-plan—GravityPoet开发",
  "summary": "支持 OpenAI/Gemini/AWS Bedrock 的 Bob 文本翻译插件",
  "icon": "",
  "author": "GravityPoet",
  "homepage": "https://github.com/GravityPoet/AI-VIP-0-token-plan",
  "appcast": "https://github.com/GravityPoet/AI-VIP-0-token-plan/raw/main/appcast.json",
  "minBobVersion": "1.8.0",
  "options": [
    {
      "identifier": "provider",
      "type": "menu",
      "title": "翻译通道",
      "defaultValue": "openai",
      "menuValues": [
        {
          "title": "OpenAI",
          "value": "openai"
        },
        {
          "title": "Gemini",
          "value": "gemini"
        },
        {
          "title": "AWS Bedrock (Mantle)",
          "value": "bedrock"
        },
        {
          "title": "自定义(兼容 OpenAI API)",
          "value": "custom"
        }
      ]
    },
    {
      "identifier": "baseUrl",
      "type": "text",
      "title": "Base URL / Endpoint",
      "desc": "Sub2API 示例: http://127.0.0.1:18080/v1；Bedrock Mantle: https://bedrock-mantle.us-east-1.api.aws/v1；Bedrock Runtime(OpenAI): https://bedrock-runtime.us-east-1.amazonaws.com/openai/v1。插件会自动标准化到 /v1。",
      "defaultValue": "http://127.0.0.1:18080/v1",
      "textConfig": {
        "placeholderText": "http://127.0.0.1:18080/v1",
        "type": "visible"
      }
    },
    {
      "identifier": "apiKey",
      "type": "text",
      "title": "API Key",
      "desc": "Sub2API 或 Amazon Bedrock API Key（Bearer）。",
      "textConfig": {
        "placeholderText": "sk-xxxxxxxx",
        "type": "secure"
      }
    },
    {
      "identifier": "bedrockRegion",
      "type": "text",
      "title": "Bedrock Region",
      "defaultValue": "us-east-1",
      "desc": "仅 AWS Bedrock 通道使用。若 Base URL 仍为默认值，将自动生成为 bedrock-mantle.<region>.api.aws/v1。",
      "textConfig": {
        "placeholderText": "us-east-1",
        "type": "visible"
      }
    },
    {
      "identifier": "model",
      "type": "menu",
      "title": "模型",
      "defaultValue": "gpt-5.2",
      "menuValues": [
        {
          "title": "gpt-5.2",
          "value": "gpt-5.2"
        },
        {
          "title": "gpt-5.1",
          "value": "gpt-5.1"
        },
        {
          "title": "gpt-5-mini",
          "value": "gpt-5-mini"
        },
        {
          "title": "gemini-3-flash-preview",
          "value": "gemini-3-flash-preview"
        },
        {
          "title": "gemini-2.5-flash",
          "value": "gemini-2.5-flash"
        },
        {
          "title": "gemini-2.5-pro",
          "value": "gemini-2.5-pro"
        },
        {
          "title": "自定义模型",
          "value": "custom"
        }
      ],
      "desc": "可直接选预设模型，或选择“自定义模型”后手填任何模型名。"
    },
    {
      "identifier": "apiMode",
      "type": "menu",
      "title": "接口协议",
      "defaultValue": "responses",
      "menuValues": [
        {
          "title": "Responses API (/responses)",
          "value": "responses"
        },
        {
          "title": "Chat Completions (/chat/completions)",
          "value": "chat_completions"
        }
      ],
      "desc": "自定义厂商时可切换协议；Bedrock Runtime(OpenAI)建议选 Chat Completions。"
    },
    {
      "identifier": "customModel",
      "type": "text",
      "title": "自定义模型名",
      "desc": "当上面选择“自定义模型”时必填。",
      "textConfig": {
        "placeholderText": "例如: gpt-5.2 或 gemini-3-flash-preview",
        "type": "visible"
      }
    },
    {
      "identifier": "requestTimeoutSec",
      "type": "text",
      "title": "请求超时(秒)",
      "defaultValue": "90",
      "desc": "单次翻译超时，范围 10-300。",
      "textConfig": {
        "placeholderText": "90",
        "type": "visible"
      }
    },
    {
      "identifier": "maxOutputTokens",
      "type": "text",
      "title": "最大输出 Token",
      "defaultValue": "1024",
      "desc": "范围 64-8192。",
      "textConfig": {
        "placeholderText": "1024",
        "type": "visible"
      }
    },
    {
      "identifier": "reasoningEffort",
      "type": "menu",
      "title": "思考强度",
      "defaultValue": "medium",
      "menuValues": [
        {
          "title": "低",
          "value": "low"
        },
        {
          "title": "中",
          "value": "medium"
        },
        {
          "title": "高",
          "value": "high"
        }
      ],
      "desc": "仅 OpenAI 通道生效（映射到 reasoning.effort）。Gemini 通道会忽略该参数。"
    },
    {
      "identifier": "streamOutput",
      "type": "menu",
      "title": "流式输出",
      "defaultValue": "true",
      "menuValues": [
        {
          "title": "开启",
          "value": "true"
        },
        {
          "title": "关闭",
          "value": "false"
        }
      ],
      "desc": "开启后优先使用流式请求并实时回调到 Bob。"
    }
  ]
}
